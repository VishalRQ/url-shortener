<h1 class="text-2xl font-bold mb-6 ml-1">Shorten a URL</h1>

<div class="max-w-md mx-auto bg-green-100 p-6 rounded shadow-md">
  <%= form_with model: @url, local: true, data: { turbo: false }, class: "flex flex-col gap-4" do |form| %>

    <div class="flex flex-col">
      <%= form.label :original_url, "Enter your URL", class: "mb-1 font-medium text-black" %>
      <%= form.text_field :original_url, required: true,
            class: "border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= form.submit "Shorten URL",
            class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" %>
    </div>

  <% end %>
</div>